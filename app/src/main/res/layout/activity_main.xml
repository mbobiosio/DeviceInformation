<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/phone_key"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    tools:text="Phone Key"
    app:layout_constraintBottom_toTopOf="@+id/phone_model"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/phone_model"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Phone Model"
    app:layout_constraintBottom_toTopOf="@+id/ip_address"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/phone_key"/>
  <TextView
    android:id="@+id/ip_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="IP Address"
    app:layout_constraintBottom_toTopOf="@+id/phone_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/phone_model"/>
  <TextView
    android:id="@+id/phone_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Phone Name"
    app:layout_constraintBottom_toTopOf="@+id/os_version"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ip_address"/>
  <TextView
    android:id="@+id/os_version"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OS Version"
    app:layout_constraintBottom_toTopOf="@+id/os"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/phone_name"/>
  <TextView
    android:id="@+id/os"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OS"
    app:layout_constraintBottom_toTopOf="@+id/network_ip"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/os_version"/>
  <TextView
    android:id="@+id/network_ip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Network Provider IP"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/os"/>
</android.support.constraint.ConstraintLayout>